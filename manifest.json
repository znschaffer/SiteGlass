{
  "manifest_version": 3,
  "name": "Site Glass",
  "version": "1.0",
  "description": "See The Truth.",
  "action": {
    "default_popup": "extension.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/Active_Favicon.png",
    "32": "icons/Active_Favicon.png",
    "48": "icons/Active_Favicon.png",
    "128": "icons/Active_Favicon.png"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "cookies"
  ]
}