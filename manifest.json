{
  "manifest_version": 3,
  "name": "Site Glass",
  "version": "1.0",
  "description": "See The Truth.",
  "action": {
    "default_popup": "extension.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ]
}